{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "lib": ["es2018"],
    "module": "commonjs",
    "target": "es2018",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "src"
  },
  "include": ["./src/**/*"]
}
