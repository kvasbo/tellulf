{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "module": "commonjs",
    "target": "ES2018",
    "lib": ["es2018"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "src"
  },
  "include": ["./src/**/*"]
}
