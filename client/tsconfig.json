{
  "compilerOptions": {
    "target": "ES2016",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": ["./externalLibraryTypeDefinitions", "./node_modules/@types"],
    "rootDir": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "externalLibraryTypeDefinitions"]
}
